function loadLang(lang) {
  document.querySelectorAll("[data-i18n]").forEach(el => {
    let key = el.getAttribute("data-i18n");
    el.innerHTML = languages[lang][key];
  });
}

function changeLang(lang) {
  loadLang(lang);
}
